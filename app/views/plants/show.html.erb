<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <button id="js-previous" class="btn btn-success" data-id="<%= @plant.id %>">Previous</button>
          <button id="js-next" class="btn btn-success" data-id="<%= @plant.id %>">Next</button>
          <h1 id="plant-name"><%= @plant.name %></h1>
        </div>
        <div class="panel-body">
          <%= image_tag("random/#{rand(10)}.jpg", class: "img-responsive") %>
        </div>
        <div class="panel-heading">
          <h4>Statistics</h4>
        </div>
        <div class="panel-body">
          <div class="col-xs-3">
            <i class="fa fa-line-chart big-icon"><%= @plant.difficulty %></i>
          </div>
          <div class="col-xs-3">
            <i class="fa fa-sun-o big-icon"><%= @plant.amount_of_light %></i>
          </div>
          <div class="col-xs-3">
            <i class="fa fa-tint big-icon"><%= @plant.amount_of_water %></i>
          </div>
          <div class="col-xs-3">
            <i class="fa fa-clock-o big-icon"><%= @plant.frequency_of_water %></i>
          </div>
        </div>

        <div class="panel-heading">
          <h4>Fun Fact</h4>
        </div>
        <div class="panel-body" id="plant-fun-fact">
          <%= @plant.fun_fact %>
        </div>

        <div class="panel-heading">
          <h4><i class="fa fa-pencil-square-o text-xs-right"></i> <%= link_to "Leave New Tip", new_plant_tip_path(@plant) %></h4>
        </div>
        <div class="panel-body">
          <%= render partial: 'tips/list_tips', locals: {tip: @plant.tips.first} %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">

  function attachListeners() {
    $(document).on('click', '#js-next', function() {
      var nextPlant = $('#js-next').attr('data-id');
      loadPlantDetails(nextPlant);
    });

    $(document).on('click', '#js-previous', function() {
      var previousPlant = $('#js-previous').attr('data-id');
      loadPlantDetails(previousPlant);
    });
  }

  function updatePage(data) {
    $('#plant-name').text(data.name);
    $('.fa-line-chart').text(data.difficulty);
    $('.fa-sun-o').text(data.amount_of_light);
    $('.fa-tint').text(data.amount_of_water);
    $('.fa-clock-o').text(data.frequency_of_water);
    $('#plant-fun-fact').text(data.fun_fact);
    $('#js-next').attr('data-id', data.id);
    $('#js-previous').attr('data-id', data.id);
  }

  $(function() {
    attachListeners();
  });
</script>

<script id="plant-details-template" type="text/x-handlebars-template">
  <div class="row" id="plant-details">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">

        <div class="panel-heading">
          <button id="js-previous" class="btn btn-success" data-id="{{idMinus}}">Previous</button>
          <button id="js-next" class="btn btn-success" data-id="{{idPlus}}">Next</button>
          <h1 id="plant-name">{{name}}</h1>
        </div>

        <div class="panel-body">
        </div>

        <div class="panel-heading">
          <h4>Statistics</h4>
        </div>
        <div class="panel-body">
          <div class="col-xs-3">
            <i class="fa fa-line-chart big-icon">{{difficulty}}</i>
          </div>
          <div class="col-xs-3">
            <i class="fa fa-sun-o big-icon">{{amountOfLight}}</i>
          </div>
          <div class="col-xs-3">
            <i class="fa fa-tint big-icon">{{amountOfWater}}</i>
          </div>
          <div class="col-xs-3">
            <i class="fa fa-clock-o big-icon">{{frequencyOfWater}}</i>
          </div>
        </div>

        <div class="panel-heading">
          <h4>Fun Fact</h4>
        </div>
        <div class="panel-body" id="plant-fun-fact">
          {{funFact}}
        </div>

        <div class="panel-heading">
          <h4>Tips</h4>
        </div>
        <div class="panel-body" id="plant-tips">
          {{#each tips}}
            <blockquote>
              <p>{{this.content}}</p>
            </blockquote>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</script>
