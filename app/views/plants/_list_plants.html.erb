<div class="col-sm-4">
  <div class="card">
    <div class="card-image">
      <%= image_tag("random/#{rand(14)}.jpg", class: "img-responsive") %>

      <span class="card-title">
        <h3><%= plant.name %></h3>
      </span>
    </div>

    <div class="card-content">
      <%= truncate(plant.fun_fact, :length => 25) %>
    </div>

    <div class="card-action">
      <i class="fa fa-info"></i>
      <%= link_to "View Details", plant_path(plant), data: plant.id, class: 'details' %>
      <i class="fa fa-pencil-square-o text-xs-right"></i>
      <%= link_to "Leave Tip", new_plant_tip_path(plant) %>
    </div>
  </div>
</div>
